<main>
  <h1>Versicherter</h1>
  <section id="user">
    <dl>
      <dt>UID</dt>
      <dd tal:content="view.context.id" />
      <dt>Login</dt>
      <dd tal:content="view.context.title" />
      <dt>State</dt>
      <dd>
        <span data-state="${view.context.state.name}">
          ${view.context.state.value}
        </span>
      </dd>
    </dl>
  </section>
  <div class="accordion" id="user-content">
    <div class="card" tal:repeat="file files">
      <div
          class="card-header"
          id="heading-${file.id}">
        <div class="row">
          <div class="mb-0 col-md-8" >
            <button
                aria-controls="collapse-${file.id}"
                aria-expanded="false"
                class="btn btn-link btn-block text-left"
                data-target="#collapse-${file.id}"
                data-toggle="collapse"
                type="button">
              <span tal:content="file.id" />
              <span tal:content="file.state.value" />
            </button>
          </div>
          <div class="col-md-4">
            <a href=""
               class="btn btn-link btn-block text-right"
               tal:attributes="href file.actions['New document']"
               >+ Neues Dokument</a>
          </div>
          <div class="col-md-12">
            <ul>
              <li tal:repeat="(title,nb) counters[file.id].items()">
                <strong tal:content="title" />:
                <span tal:content="nb" />
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div
          class="collapse"
          aria-labelledby="heading-${file.id}"
          data-parent="#user-content"
          id="collapse-${file.id}">
        <div class="card-body"
             tal:define="brains docs.get(file.id);
                         listing_title string:Files">
          <div metal:use-macro="view.listing.macros.listing" />
        </div>
      </div>
    </div>
  </div>
</main>
